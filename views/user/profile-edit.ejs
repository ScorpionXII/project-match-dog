<% include ../layouts/template/header.ejs %>
<div class="container">
    <div class="row">
        <form action="/profile-edit" method="post" enctype="multipart/form-data">
        <div class="col-md-6">
            <div class="b-form">
                <h2 class="h2">Fill out the user form</h2>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="fullname">User name:</label>
                            <input type="text" class="form-control" name="fullname" placeholder="User name" value="<%= user.fullname %>">
                        </div>
                        <div class="form-group">
                            <label for="age">Age:</label>
                            <input type="number" class="form-control" name="age" placeholder="Age" value="<%= user.age %>">
                        </div>
                        <div class="form-group">
                            <label for="description">Description:</label>
                            <textarea class="form-control" rows="3" name="description" placeholder="Description"><%= user.description %></textarea>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="avatar">
                            <img src="<%= user.profilePic %>" alt="" id="userImage" width="300">
                        </div>
                        <div class="avatar-input form-group">
                            <input type="file" name="userPicture" id="userPicture">
                        </div>
                    </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="b-form">
                <h2 class="h2">Fill out your dog form</h2>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" class="form-control" name="name" placeholder="Name" value="<%= user.dog.name %>">
                        </div>
                        <div class="form-group">
                            <label for="breed">Breed:</label>
                            <input type="text" class="form-control" name="breed" placeholder="Breed" value="<%= user.dog.breed %>">
                        </div>
                        <div class="form-group">
                            <label for="dog-age">Age:</label>
                            <input type="number" class="form-control" name="dogAge" placeholder="Age" value="<%= user.dog.age %>">
                        </div>
                        <div class="form-group">
                            <label for="dog-description">Description:</label>
                            <textarea class="form-control" rows="3" name="dogDescription" placeholder="Description"><%= user.dog.description %></textarea>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="avatar">
                            <img src="<%= user.dog.picture %>" alt="" id="dogImage" width="300">
                        </div>
                        <div class="avatar-input form-group">
                            <input type="file" name="dogPicture" id="dogPicture">
                        </div>
                    </div>
                    <input type="hidden" name="dogId" value="<%= user.dog._id %>"/>
            </div>
        </div>
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-default">Guardar</button>
        </div>
        </form>
    </div>
</div>
</div>
<script>
    formShowImage("userPicture", "userImage");
    formShowImage("dogPicture", "dogImage");
</script>
